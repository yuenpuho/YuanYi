<?php
defined('BASEPATH') OR exit('No direct script access allowed');
/**
 * 数据库操作的基类
 * Class Base_Model
 * author: hu.yuanpu
 * date: 2017/09/12
 */
class Base_Model extends CI_Model {
    /**
     * 存储操作 MySQL 的连接标识
     * @var null
     */
    private $hander = null;

    public function __construct($db = 'default') {
        parent::__construct();

        $this->hander = $db == 'default' ? $this->db : $this->load->database('eemsii', TRUE);
    }

    /**
     * 查询数据，支持多条件、无条件，或者单一条件查询
     * @param $sql
     * @param string $param
     * @return mixed
     */
    protected function select($sql, $param = '') {
        if (is_array($param)) {
            return $this->hander->query($sql, $param)->result_array();
        } else if (empty($param)) {
            return $this->hander->query($sql)->result_array();
        } else {
            return $this->hander->query($sql, $param)->row_array();
        }
    }

    /**
     * 添加数据（支持批量添加，批量添加时，返回新增ID的数组）
     * @param string $tbl
     * @param array $data
     * @param bool $isBatch
     * @return array
     */
    protected function insert($tbl = '', $data = array(), $isBatch = false) {
        if ($isBatch) {
            $this->hander->insert_batch($tbl, $data);

            $start = $this->hander->insert_id();
            $end = count($data) - 1;
            $end = $start + $end;

            return range($start, $end);
        } else {
            $this->hander->insert($tbl, $data);

            return $this->hander->insert_id();
        }
    }

    protected function update($tbl = '', $data = array(), $condition = array()) {
        return $this->hander->update($tbl, $data, $condition);
    }

    protected function delete($tbl = '', $condition = array()) {
        return $this->hander->delete($tbl, $condition);
    }
}